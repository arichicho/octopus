  // Funci√≥n para verificar si una reuni√≥n necesita preparaci√≥n
  const checkMeetingPrepNeeded = async (meetingId: string, meetingTitle: string) => {
    // Verificar si ya hay una decisi√≥n del usuario en el estado local
    const userDecision = meetingPrepDecisions[meetingId];
    if (userDecision && userDecision.userDecided) {
      return {
        needsPrep: userDecision.needsPrep,
        shouldAsk: false,
        confidence: userDecision.confidence,
        userDecided: true
      };
    }

    try {
      const prediction = await MeetingPreferencesService.predictPrepNeeded(meetingTitle);
      
      // Si la confianza es baja, preguntar al usuario
      if (prediction.confidence < 0.7) {
        return {
          needsPrep: prediction.needsPrep,
          shouldAsk: true,
          confidence: prediction.confidence,
          userDecided: false
        };
      }

      return {
        needsPrep: prediction.needsPrep,
        shouldAsk: false,
        confidence: prediction.confidence,
        userDecided: false
      };
    } catch (error) {
      console.error('Error checking meeting prep needed:', error);
      // Fallback en caso de error
      return {
        needsPrep: true,
        shouldAsk: true,
        confidence: 0.3,
        userDecided: false
      };
    }
  };

  // Funci√≥n para calcular la altura visual basada en la duraci√≥n
  const getVisualHeight = (startTime: string, endTime: string, minHeight: number = 80, maxHeight: number = 300) => {
    const start = new Date(startTime);
    const end = new Date(endTime);
    const durationMinutes = Math.max(5, (end.getTime() - start.getTime()) / (1000 * 60));
    
    let height;
    
    // Sistema proporcional mejorado:
    // - Tareas de 30min o menos: altura m√≠nima (mitad de la altura base)
    // - Tareas de 1 hora o m√°s: altura m√°xima
    // - Entre 30min y 1 hora: escalado proporcional
    if (durationMinutes <= 30) {
      height = minHeight; // Altura m√≠nima para tareas cortas
    } else if (durationMinutes >= 60) {
      height = maxHeight; // Altura m√°xima para tareas largas
    } else {
      // Escalado proporcional entre 30min y 1 hora
      const ratio = (durationMinutes - 30) / 30; // 0 a 1
      height = minHeight + (ratio * (maxHeight - minHeight));
    }
    
    // Debug: Log para verificar que se est√° aplicando
    console.log('Visual height calculation:', {
      startTime,
      endTime,
      durationMinutes,
      calculatedHeight: Math.round(height),
      minHeight,
      maxHeight,
      category: durationMinutes <= 30 ? 'short' : durationMinutes >= 60 ? 'long' : 'medium'
    });
    
    return Math.round(height);
  };

  // Funci√≥n para obtener el color de fondo basado en el tipo de bloque
  const getBlockBackgroundColor = (type: string, status: string) => {
    if (status === 'completed') return 'bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 border-green-200 dark:border-green-800 shadow-lg';
    
    switch (type) {
      case 'meeting':
        return 'bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 border-blue-200 dark:border-blue-800 shadow-lg';
      case 'event':
        return 'bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 border-indigo-200 dark:border-indigo-800 shadow-lg';
      case 'prep':
