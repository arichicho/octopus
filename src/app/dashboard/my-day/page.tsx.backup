    const userToday = timezone ? new Date(now.toLocaleString('en-US', { timeZone: timezone })) : now;
    const userYesterday = new Date(userToday);
    userYesterday.setDate(userYesterday.getDate() - 1);
    const userTomorrow = new Date(userToday);
    userTomorrow.setDate(userTomorrow.getDate() + 1);

    const todayStr = userToday.toISOString().split('T')[0];
    const yesterdayStr = userYesterday.toISOString().split('T')[0];
    const tomorrowStr = userTomorrow.toISOString().split('T')[0];

    if (dateStr === todayStr) {
      return 'Hoy';
    } else if (dateStr === yesterdayStr) {
      return 'Ayer';
    } else if (dateStr === tomorrowStr) {
      return 'Ma√±ana';
