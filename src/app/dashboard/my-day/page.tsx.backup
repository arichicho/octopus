      }));

      // Si no necesita prep, remover el bloque de preparaci√≥n del plan
      if (!needsPrep && plan) {
        const updatedPlan = {
          ...plan,
          blocks: plan.blocks.filter(block => {
            // Remover bloques de preparaci√≥n que est√©n relacionados con esta reuni√≥n
            if (block.type === 'prep' && block.relations?.meetingId === meetingId) {
              console.log('Removing prep block for meeting:', meetingTitle);
