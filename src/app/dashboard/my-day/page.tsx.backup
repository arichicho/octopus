      task.tags.some(tag => tag.toLowerCase().includes('llamar'))
    );
  }, [contextTasks]);

  // Funci√≥n para detectar huecos de agenda y sugerir actividades
  const getScheduleGaps = (blocks: any[]) => {
    if (!blocks || blocks.length === 0) return [];
    
    const sortedBlocks = blocks
      .filter(b => b.status !== 'completed')
      .sort((a, b) => new Date(a.start).getTime() - new Date(b.start).getTime());
    
    const gaps = [];
    
    for (let i = 0; i < sortedBlocks.length - 1; i++) {
      const currentEnd = new Date(sortedBlocks[i].end);
      const nextStart = new Date(sortedBlocks[i + 1].start);
      const gapMinutes = (nextStart.getTime() - currentEnd.getTime()) / (1000 * 60);
      
      // Si hay un hueco de 30 minutos o m√°s
      if (gapMinutes >= 30) {
        // Determinar qu√© tipo de actividades sugerir basado en la duraci√≥n
        let suggestedActivities = [];
        let gapType = '';
        
        if (gapMinutes >= 90) {
          // Hueco grande: ideal para trabajo profundo
          gapType = 'deep-work';
          suggestedActivities = [
            {
              type: 'focus',
              title: 'Trabajo Profundo',
              description: 'Perfecto para tareas que requieren concentraci√≥n',
              icon: 'üß†',
              minDuration: 90
            },
            {
              type: 'calls',
              title: 'Llamadas',
              description: 'Tambi√©n puedes hacer llamadas en este tiempo',
              icon: 'üìû',
              tasks: callTasks.slice(0, 2)
            }
          ];
        } else if (gapMinutes >= 60) {
          // Hueco mediano: llamadas o tareas medianas
          gapType = 'medium';
          suggestedActivities = [
            {
              type: 'calls',
              title: 'Llamadas',
              description: 'Ideal para llamadas y seguimientos',
              icon: 'üìû',
              tasks: callTasks.slice(0, 2)
            },
            {
              type: 'quick-tasks',
              title: 'Tareas R√°pidas',
              description: 'Perfecto para tareas de 30-60 minutos',
              icon: '‚ö°'
            }
          ];
        } else {
          // Hueco peque√±o: solo llamadas r√°pidas
          gapType = 'quick';
          suggestedActivities = [
            {
              type: 'calls',
              title: 'Llamadas R√°pidas',
              description: 'Ideal para llamadas cortas y seguimientos',
              icon: 'üìû',
              tasks: callTasks.slice(0, 1)
            }
          ];
        }
        
        gaps.push({
          start: sortedBlocks[i].end,
          end: sortedBlocks[i + 1].start,
          durationMinutes: gapMinutes,
          gapType,
          suggestedActivities
        });
      }
    }
    
    return gaps;
  };

  // Funci√≥n para obtener tareas relacionadas con un bloque
