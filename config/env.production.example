# ===========================================
# OCTOPUS - VARIABLES DE ENTORNO (PRODUCCIÓN)
# ===========================================

# ===========================================
# GOOGLE OAUTH (Gmail/Calendar/Drive)
# ===========================================
# Client ID del OAuth (tipo Web)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_production_google_oauth_client_id

# Client Secret del OAuth
GOOGLE_CLIENT_SECRET=your_production_google_oauth_client_secret

# Redirect URIs configurados en Google Console:
# Prod: https://octopus-theceo.vercel.app/api/auth/google/callback

# ===========================================
# FIREBASE (Cliente Web)
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_production_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===========================================
# FIREBASE ADMIN (Verificar tokens en API routes)
# ===========================================
# Opción A (una sola var): JSON de la cuenta de servicio
# FIREBASE_SERVICE_ACCOUNT='{"project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}'

# Opción B (separadas):
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# APP/CONFIG GENERALES
# ===========================================
# URL pública de la app (Vercel)
NEXT_PUBLIC_APP_URL=https://octopus-theceo.vercel.app

# Clave AES-256 para cifrar tokens (generar con: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_character_hex_encryption_key

# ===========================================
# OPCIONALES (Si aplicar)
# ===========================================

# Claude API
CLAUDE_API_KEY=your_production_claude_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# SendGrid para email transaccional
SENDGRID_API_KEY=your_production_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# PRODUCCIÓN
# ===========================================
NODE_ENV=production