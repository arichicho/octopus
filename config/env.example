# ===========================================
# OCTOPUS - VARIABLES DE ENTORNO
# ===========================================

# ===========================================
# GOOGLE OAUTH (Gmail/Calendar/Drive)
# ===========================================
# Client ID del OAuth (tipo Web)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_oauth_client_id

# Client Secret del OAuth
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Redirect URIs configurados en Google Console:
# Dev: http://localhost:3000/api/auth/google/callback
# Prod: https://octopus-theceo.vercel.app/api/auth/google/callback

# ===========================================
# FIREBASE (Cliente Web)
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ===========================================
# FIREBASE ADMIN (Verificar tokens en API routes)
# ===========================================
# Opción A (una sola var): JSON de la cuenta de servicio
# FIREBASE_SERVICE_ACCOUNT='{"project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}'

# Opción B (separadas):
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# APP/CONFIG GENERALES
# ===========================================
# URL pública de la app (local o Vercel)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Clave AES-256 para cifrar tokens (generar con: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_character_hex_encryption_key

# ===========================================
# OPCIONALES (Si aplicar)
# ===========================================

# Claude API
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# MUSIC TRENDS APIs
# ===========================================
# Chartmetric API - 64-character refresh token (permanent)
# Get this after subscribing to Chartmetric API plan
CHARTMETRIC_REFRESH_TOKEN=your_64_character_chartmetric_refresh_token

# Spotify API credentials for real charts data
# Get these from https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Internal API key for scheduled updates
INTERNAL_API_KEY=your_internal_api_key_for_scheduled_updates

# Cron secret for scheduled scraping (optional; Vercel Cron adds a header, but this
# can be used for manual triggering via URL param `?key=` or `X-Cron-Secret` header)
CRON_SECRET=your_random_string_secret

# SendGrid para email transaccional
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# DESARROLLO (Opcional)
# ===========================================
# Firebase Emulators
NEXT_PUBLIC_FIREBASE_USE_EMULATOR=true
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080

# Emails autorizados (desarrollo)
NEXT_PUBLIC_AUTHORIZED_EMAILS=me@example.com,friend@example.com

# Debug
NODE_ENV=development
DEBUG_MODE=true
